// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  clerkId   String   @unique
  name      String
  email     String   @unique
  imageUrl  String?
  role      String   @default("user") // Provide a default value
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

